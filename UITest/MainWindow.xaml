<Window x:Class="UITest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UITest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="32,0,32,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="在线翻译" 
               Margin="0,4" Grid.Row="0" Grid.Column="0" />
        <TextBlock Text="确认翻译" 
               Margin="0,4" Grid.Row="0" Grid.Column="2" />

        <ListView Grid.Row="1" Grid.Column="0" >
            <TextBlock x:Name="tmp1"  FontSize = "20" Text="default text"/>
        </ListView>
        
        <Rectangle Width="1" Margin="0,4" Grid.Column="1" Grid.RowSpan="2" />
        <ListView Grid.Row="1" Grid.Column="2" >
            <TextBlock x:Name="tmp2" Text="normal text"/>
        </ListView>
    </Grid>
</Window>
